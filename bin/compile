#!/bin/sh
BUILD_DIR=${1:-}

### Load dependencies

echo "-----> Custom Node.js Buildpack"

export PATH="$BUILD_DIR/.heroku/node/bin:$BUILD_DIR/.heroku/yarn/bin":$PATH


ls -lrt ${BUILD_DIR}/.heroku/node/

ls -lrt ${BUILD_DIR}/.heroku/yarn/bin

rm -rf ${BUILD_DIR}/src  ${BUILD_DIR}/package.json  ${BUILD_DIR}/package-lock.json


cp -r ${BUILD_DIR}/ui/react-simple-chatbot/* ${BUILD_DIR}/

ls -lrt ${BUILD_DIR}/

yarn install
yarn run build

echo "-----> Buildpack finished"
