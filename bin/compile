#!/bin/sh

echo "-----> Custom Node.js Buildpack"

# Define the directory from which you want to deploy your app.
APP_DIR=${CUSTOM_APP_DIR}

rm -rf src package.json package-lock.json

cp -r ${APP_DIR)/* .

# Install dependencies and build your app (replace these commands with your own).
npm install
npm run build

echo "-----> Buildpack finished"
