#!/bin/sh

echo "-----> Custom Node.js Buildpack"

BUILD_DIR=${1:-}
ls -lrt ${BUILD_DIR}/


rm -rf ${BUILD_DIR}/src  ${BUILD_DIR}/package.json  ${BUILD_DIR}/package-lock.json


cp -r ${BUILD_DIR}/${APP_DIR}/react-simple-chatbot/* ${BUILD_DIR}/

ls -lrt ${BUILD_DIR}/

npm install
npm run build

echo "-----> Buildpack finished"
